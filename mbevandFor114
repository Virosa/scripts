#IMPORTANT! *** LOGIN AS ROOT FIRST *** You can run "su" then password live
disallow && minestop
cd /root
#sudo rm -r silentarmy ## UNCOMMENT IF ITS NOT YOUR FIRST TIME DOING GIT CLONE
git clone -b mbevand https://github.com/padrino121/silentarmy
cd silentarmy
make
rm -rf /usr/local/bin/silentarmy && rm -rf /usr/local/bin/sa-solver
cp /root/silentarmy/silentarmy /usr/local/bin && cp /root/silentarmy/sa-solver /usr/local/bin
allow && show miner
done
